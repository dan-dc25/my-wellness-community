<h1>Create your account</h1>

<%= form_with model: @user do |f| %>
    <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username %>
    </div><br>
    
    <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div><br>

    <div class="field">
        <%= f.label :password_confirmarion %>
        <%= f.password_field :password_confirmation %>
    </div><br>

        <%= f.submit "Create Account" %>
    
<% end %>