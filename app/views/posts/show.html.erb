<h2>Welcome <%= current_user.name %></h2>

<% if @post.user_id %>
    <strong><%= link_to "Edit Post", edit_post_path(@post.id) %></strong> 
    <br><br>
<% end %>

<strong>Title: </strong><%= @post.title %><br><br> | By: <%= link_to @post.user.name, user_path(@user) %><br /><br />

<strong>Content: </strong><%= @post.content %>

<h3>Comments(<%= @post.comments.size %>)</h3>
<div>

<% @post.comments.each do |comment| %>
    <% comment_user = User.find_by(id: comment.user_name) %>
    <strong>Comment by: </strong><%= link_to comment_user, user_path(comment_user.id) %>
    <p class="comment"><%= comment.content %>
    <p>Posted <%= distance_of_time_in_words(comment.post.created_at, comment.created_at) %> ago</p>
<% end %>

</div>




<section class="comment">
<h3>Leave a comment:</h3>
<%= render partial: 'comments/form' %>
<br>
</section>







   


