<h1><%= @user.username %></h1>

<ul>
<li><a href="application/home">Home</a></li>
<li><a href="posts/new">Posts</a></li>
<li><a href="static/about">About</a></li>
</ul>

<% unless @posts.empty? %>
    <h3>Posts created by <%= @user.name %>:</h3>
    <ul>
        <% @posts.each do |p| %>
            <li><%= link_to p.title, post_path(p) %></li>
        <% end %>
    </ul>


<span><%= link_to "New Post", new_user_post_path(current_user.id) %></span>

